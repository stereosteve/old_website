@import 'nib'
body
  reset()
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color #00B7FF

.button1
  minimal-button()

.button2
  smooth-button()

.button3
  pill-button()

.button4
  download-button()

.button5
  bold-button()


.box
  width 200px
  height 200px
  background linear-gradient(top, #3a3, #ccc)


/**
 * Map Widget
 */

.map_box
  border 1px solid #555
  width 1000px

  .region_info
    background-color rgba(0,0,0,0.5)
    opacity 40%
    border-bottom 1px solid #333
    color white
    padding 10px
    height 45px
    h2
      margin 0

.map_widget
  position relative


  &.large_map_widget
    width 969px
    height 593px
    background url(/images/map.png) no-repeat

  &.small_map_widget
    border 1px solid #555
    width 500px
    height 300px
    background url(/images/map500.png) no-repeat 50%

  a.map_pin
    display block
    position absolute
    width 17px
    height 22px
    background url(/images/region_pin.png) no-repeat
    text-indent -9999em

    &.high_need
      background-position -40px 0

    &:hover, &.active
      background-position -20px 0

